@model TaskSevice.Models.Tasks

@{
    ViewData["Title"] = "Create Sub-Task";
}

<h2>Create Sub-Task</h2>

<form asp-action="CreateSubTask" asp-route-parentId="@ViewBag.ParentTaskId">
    <div class="form-group">
        <label asp-for="Title">Task Name</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Executors">Исполнитель</label>
        <textarea asp-for="Executors" class="form-control"></textarea>
        <span asp-validation-for="Executors" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlannedEffort">Плановая трудоемкость</label>
        <textarea asp-for="PlannedEffort" class="form-control"></textarea>
        <span asp-validation-for="PlannedEffort" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActualEffort">Фактическое время выполнения</label>
        <textarea asp-for="ActualEffort" class="form-control"></textarea>
        <span asp-validation-for="ActualEffort" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Edit" asp-route-id="@ViewBag.ParentTaskId">Back to Parent Task</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
