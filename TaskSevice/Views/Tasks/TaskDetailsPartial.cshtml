@model TaskSevice.Models.Tasks

<div class="task-data">
    <h3>Детали задачи:</h3>

    <form id="editTaskForm">
        <div class="task-data" data-parent-id="@Model.Id">
        <div class="form-group">
            <label for="taskTitle">Title:</label>
            <input type="text" id="taskTitle" value="@Model.Title" class="form-control" />
        </div>

        <div class="form-group">
            <label for="taskDescription">Description:</label>
            <textarea id="taskDescription" class="form-control">@Model.Description</textarea>
        </div>

        <div class="form-group">
            <label for="Executors">Исполнитель:</label>
            <textarea id="taskExecutors" class="form-control">@Model.Executors</textarea>
        </div>

        <div class="form-group">
            <label for="taskPlannedEffort">Плановая трудоёмкость:</label>
            <textarea id="taskPlannedEffort" class="form-control">@Model.PlannedEffort</textarea>
        </div>

        <div class="form-group">
            <label for="taskActualEffort">Фактическое время выполнения:</label>
            <textarea id="taskActualEffort" class="form-control">@Model.ActualEffort</textarea>
        </div>

        <div class="form-group">
            <label for="taskStatus">Статус:</label>
            <select id="taskStatus" class="form-control">
                <option value="Assigned" >Назначена</option>
                <option value="InProgress" >Выполняется</option>
                <option value="Paused" >Приостановлена</option>
                <option value="Completed">Завершена</option>
            </select>
        </div>

        <a href="@Url.Action("CreateSubTask", "Tasks", new { parentId = Model.Id })" class="btn btn-primary">Создать подзадачу</a>
        <button type="button" onclick="submitTaskChanges(@Model.Id)">Save Changes</button>
        <button onclick="deleteTask(@Model.Id)">Delete</button>
    </form>
</div>